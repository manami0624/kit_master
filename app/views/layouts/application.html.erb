<!DOCTYPE html>
<html>
  <head>
    <title>KitMaster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">KitMaster</a></h1>
        <% if user_signed_in? %>

          <div class="user_nav grid-6">

          <span><%= "#{current_user.nickname}さん" %>
            <ul class="user__info">
              <li>
                <%= link_to "単語クイズ", root_path %>
              </li>
              <li>
                <%= link_to "MY単語帳", "/users/#{current_user.id}" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </span>
        <%= link_to "単語登録", new_word_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>

    <%= yield %>
    <footer>
      <p>
        Copyright KitMaster 2023.
      </p>
    </footer>
  </body>
</html>
